@using CarAuction2.Models.Car
@model CarAuction2.Models.Car.Car

@{
    ViewBag.Title = "My Cars";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
<div class="row">
    <div class="col-md-9">
        <h2>My Cars</h2>
    </div>
    <div class="col-md-3 text-md-right">
        <a class="btn btn-info" href="/Car/Publish">Publish new car</a>
    </div>
</div>
@foreach (Car car in ViewBag.MyCars)
{
    <div class="card mt-2">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h5>
                        @Html.DisplayFor(m => car.Model.Mark.Name) @Html.DisplayFor(m => car.Model.Name)
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(m => car.ProductionYear)
                    </h6>
                </div>
                <div class="col-md-6 text-md-right">
                    <h4>@Html.DisplayFor(m => car.DesiredPrice)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(m => car.Mileage) km
                    </h6>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">
                @Html.DisplayFor(m => car.Seller.FirstName) 
                @Html.DisplayFor(m => car.Seller.LastName)
            </h6>
            <p class="card-text">@Html.DisplayFor(m => car.Description)</p>
            <a href="#" class="card-link">Update</a>
            <a href="#" class="card-link">Mark as sold</a>
            <a href="#" class="card-link">View bids</a>
        </div>
    </div>
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Car Auction</title>
    @Styles.Render("~/styles")
    @Scripts.Render("~/scripts")
</head>
<body>
<nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container">
        <div class="navbar-brand">
            @Html.ActionLink("CarAuction", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#HeadNavbar" aria-controls="HeadNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="HeadNavbar">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Cars</a>
                </li>
                @if (Session["User"] == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Sign/In">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Sign/Up">Sign Up</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Sign/Out">Sign Out</a>
                    </li>
                }
                
            </ul>
        </div>
    </div>
</nav>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; Car Auction</p>
    </footer>
</div>
</body>
</html>